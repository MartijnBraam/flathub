{
  "app-id": "nl.brixit.wiremapper",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "command": "wiremapper",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--system-talk-name=org.bluez",
    "--allow=bluetooth",
    "--share=network"
  ],
  "modules": [
    "python3-wiremapper.json",
    {
      "name": "libhandy",
      "buildsystem": "meson",
      "config-opts": [
        "-Dprofiling=false",
        "-Dintrospection=enabled",
        "-Dgtk_doc=false",
        "-Dtests=false",
        "-Dexamples=false",
        "-Dvapi=false",
        "-Dglade_catalog=disabled"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://source.puri.sm/Librem5/libhandy.git",
          "tag": "v0.0.13",
          "commit": "7a193d7692c9c76a1a94f17c4d30b585f77d177c"
        }
      ]
    },
    {
      "name": "desktop-files",
      "buildsystem": "simple",
      "build-commands": [
        "install -D nl.brixit.wiremapper.desktop /app/share/applications/nl.brixit.wiremapper.desktop",
        "install -D nl.brixit.wiremapper.svg /app/share/icons/hicolor/scalable/apps/nl.brixit.wiremapper.svg",
        "install -D nl.brixit.wiremapper.metainfo.xml /app/share/metainfo/nl.brixit.wiremapper.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://gitlab.com/MartijnBraam/wiremapper/-/raw/26b95535001fe9b398b2b09757a30a2eeb8a9ccd/data/icon.svg",
	  "dest-filename": "nl.brixit.wiremapper.svg",
	  "sha256": "7ea63903464f4186a99441fe370f7c08ad67d2d81ef7915aeeee6b1542b0d58f"
	},
        {
          "type": "file",
          "url": "https://gitlab.com/MartijnBraam/wiremapper/-/raw/26b95535001fe9b398b2b09757a30a2eeb8a9ccd/data/nl.brixit.wiremapper.desktop",
	  "dest-filename": "nl.brixit.wiremapper.desktop",
	  "sha256": "ace30d48e39a6d174d7867b5889862845da0029b858119a0255a86b6fc6a0fc4"
	},
        {
          "type": "file",
          "url": "https://gitlab.com/MartijnBraam/wiremapper/-/raw/26b95535001fe9b398b2b09757a30a2eeb8a9ccd/data/nl.brixit.wiremapper.metainfo.xml",
	  "dest-filename": "nl.brixit.wiremapper.metainfo.xml",
	  "sha256": "cd286914c5a0e85b752f69b0e8cff977b4d5c232cdabf62cc210c7e63edd72a3"
	}
      ]
    }
  ]
}
